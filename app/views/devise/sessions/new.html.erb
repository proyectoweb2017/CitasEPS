<section class= "section-padding">
  <div class="container">
		<div class="col-md-12">
			<h2 class="ser-title">Login</h2>
			<hr class="botm-line">
		</div>
    
    <div class="col-md-4">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :email, "Correo" %><br />
          <%= f.email_field :email, autofocus: true, class:"form-control br-radius-zero" %>
        </div>
      
        <div class="form-group">
          <%= f.label :password, "ContraseÃ±a" %><br />
          <%= f.password_field :password, autocomplete: "off", class:"form-control br-radius-zero" %>
        </div>
      
        <% if devise_mapping.rememberable? -%>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "Recordar mis credenciales" %>
          </div>
        <% end -%>
      
        <div class="form-action">
          <%= f.submit "Log in",  class:"btn btn-form" %>
        </div>
      <% end %>
      
      <%= render "devise/shared/links" %>      
    </div>
  </div>
</section>

